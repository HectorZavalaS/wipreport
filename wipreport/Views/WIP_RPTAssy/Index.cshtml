@model IEnumerable<wipreport.Models.WIP_RPT>

<div class="window" style="margin-top:15px;">
    <div class="window-title">
        <div class="window-content" id="viewRpt" style="color:black;">
            <div id="sectionData">
                <button type="button" class="btn btn-success" style="float:left;margin-left:15px;" id="btnDownload">Descargar reporte</button>
                <table id='tableRept' class='table table-striped table-bordered display nowrap' style='width:100%;font-size:10px;color:black;'>
                    <thead>
                        <tr>
                            <th>LOCATOR</th>
                            <th>MAGAZINE</th>
                            <th>SERIAL READ</th>
                            <th>MODEL</th>
                            @*<th>ROUTE</th>*@
                            <th>DJ GROUP</th>
                            <th>QTY</th>
                            <th>SEMIFINISH</th>
                            <th>REVIEW</th>
                            <th>TYPE</th>
                            <th>QUARANTINE</th>
                            <th>STATUS</th>
                            <th>USER READ</th>
                            <th>DATE IN</th>
                            <th>DATE OUT</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LOCATOR</td>
                                <td>@item.MAGAZINE</td>
                                <td>@item.SCANED_SERIAL</td>
                                <td>@item.MODEL</td>
                                @*<td>@item.ROUTE</td>*@
                                <td>@item.DJ_GROUP</td>
                                <td>@item.QTY</td>
                                <td>@item.SEMIFINISH</td>
                                <td>@item.REVIEW</td>
                                <td>@item.TYPE</td>
                                <td>@item.QUARANTINE</td>
                                <td>@item.STATUS</td>
                                <td>@item.USER_READ</td>
                                <td>@item.DATE_IN</td>
                                <td>@item.DATE_OUT</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div id="sectionLoad">
                <div class="spinner-grow text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-secondary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-success" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-danger" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-warning" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-info" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-light" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-dark" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#tableRept').DataTable({
            "paging": true,
            "searching": true,
            "lengthChange": false,
            "pageLength": 15,
            "info": false,
            "autoWidth": true,
            "ordering": true,
            "responsive": true,
            dom: 'Bfrtip',
            buttons: [
                'excel'
            ]
            //'language': { 'url': getVirtDir() + '/Scripts/Spanish.json' }
        });
        $("#sectionData").show("fade");
        $("#sectionLoad").hide();

        getAssyInReport();
        //new $.fn.dataTable.FixedHeader(table);
    });
</script>

